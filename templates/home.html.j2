    }
  });
</script>
<script>
  const track = document.getElementById('hero-carousel-track');
  const left = document.getElementById('carousel-left');
  const right = document.getElementById('carousel-right');
  const dotsContainer = document.getElementById('carousel-dots');
  const slides = document.querySelectorAll('.carousel-image');
  let index = 0;

  slides.forEach((_, i) => {
    const dot = document.createElement('span');
    if (i === 0) dot.classList.add('active');
    dot.dataset.index = i;
    dotsContainer.appendChild(dot);
  });

  const dots = document.querySelectorAll('.carousel-dots span');

  function updateCarousel() {
    track.style.transform = `translateX(-${index * 100}%)`;
    dots.forEach(dot => dot.classList.remove('active'));
    dots[index].classList.add('active');
  }

  right.addEventListener('click', () => {
    index = (index + 1) % slides.length;
    updateCarousel();
  });

  left.addEventListener('click', () => {
    index = (index - 1 + slides.length) % slides.length;
    updateCarousel();
  });

  dots.forEach(dot => {
    dot.addEventListener('click', () => {
      index = parseInt(dot.dataset.index);
      updateCarousel();
    });
  });

  document.querySelectorAll('.event-card img').forEach(img => {
    img.addEventListener('click', () => {
      const alreadyZoomed = img.classList.contains('zoomed');
      document.querySelectorAll('.event-card img.zoomed').forEach(i => i.classList.remove('zoomed'));
      if (!alreadyZoomed) {
        img.classList.add('zoomed');
      }
    });
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') img.classList.remove('zoomed');
    });
  });

  document.querySelectorAll('.pastevent-card img').forEach(img => {
    img.addEventListener('click', () => {
      const alreadyZoomed = img.classList.contains('zoomed');
      document.querySelectorAll('.pastevent-card img.zoomed').forEach(i => i.classList.remove('zoomed'));
      if (!alreadyZoomed) {
        img.classList.add('zoomed');
      }
    });
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') img.classList.remove('zoomed');
    });
  });
</script>

