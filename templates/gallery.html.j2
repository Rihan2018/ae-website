<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Gallery | {{ company }}</title>
  <link rel="stylesheet" href="styles/style.css" />
</head>
<body>

<header class="hero-header">
  <img src="/images/logo.png" alt="{{ company }} logo" class="logo-fixed" />
  <div class="hamburger-menu">
    <div class="hamburger-icon" id="hamburger-icon">&#9776;</div>
    <div class="menu-items" id="menu-items">
      <a href="home.html">Home</a>
      <a href="gallery.html">Gallery</a>
      <a href="about.html">About & Contact</a>
    </div>
  </div>
</header>

<main>
  <section class="gallery-section">
    <div class="section-header">
      <h2>Photo Gallery</h2>
    </div>

    {% for category, filenames in gallery_categories.items() %}
      <div class="gallery-category">
        <h3 class="category-title">{{ category }}</h3>
        <div class="gallery-grid">
          {% for filename in filenames %}
            <div class="gallery-item">
              <img src="images/Gallery/{{ category }}/{{ filename }}" alt="{{ category }} {{ loop.index }}">
            </div>
          {% endfor %}
        </div>
      </div>
    {% endfor %}

  </section>
</main>

<footer>
  <p>&copy; 2023 {{ company }}. All rights reserved.</p>
</footer>

<script>
  const hamburgerIcon = document.getElementById('hamburger-icon');
  const menuItems = document.getElementById('menu-items');
  hamburgerIcon.addEventListener('click', () => {
    menuItems.style.display = menuItems.style.display === 'block' ? 'none' : 'block';
  });
  window.addEventListener('click', (e) => {
    if (!e.target.closest('.hamburger-menu')) {
      menuItems.style.display = 'none';
    }
  });
</script>

</body>
</html>
